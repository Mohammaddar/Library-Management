<Window x:Class="LibraryManagement.FrmEmployees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        mc:Ignorable="d"
        Title="FrmEmployees"
        Height="570"
        Width="920"
        Background="#F6F5F5">
    <Window.Resources>
        <ControlTemplate x:Key="tmpTabItem" TargetType="RadioButton">
            <Border x:Name="borderTabItem"
                    Background="Transparent">
                <Label Name="lblTabItem"
                    Content="{TemplateBinding Content}"
                       Foreground="#145374"
                       FontSize="{TemplateBinding FontSize}"
                   Background="Transparent"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontFamily="Fonts/#Titillium Web"
                         Margin="50,0,0,0"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="borderTabItem"
                            Property="Background"
                            Value="#FFEAF1F6"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="borderTabItem"
                            Property="Background"
                            Value="#D3E0EA"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpTabItem2" TargetType="TabItem">
            <Grid x:Name="gridTabItem2"
                  Width="{TemplateBinding Width}" 
                  Height="{TemplateBinding Height}">
                <Border x:Name="borderTabItem2"
                        Background="Transparent"
                        BorderBrush="#022E57"
                        BorderThickness="0,0,0,0"/>
                <Label x:Name="lblTabItem2"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       BorderThickness="0"
                       VerticalContentAlignment="Center"
                       Background="Transparent"
                       Content="{TemplateBinding Header}"
                       HorizontalContentAlignment="Center"
                       FontFamily="Fonts/#Titillium Web"
                       Foreground="#022E57"
                       FontSize="13"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="true" 
                         SourceName="gridTabItem2">
                    <Setter Property="Background"
                            TargetName="borderTabItem2"
                            Value="#D3E0EA"/>
                </Trigger>
                <Trigger Property="IsSelected"
                         Value="true">
                    <Setter Property="BorderThickness"
                            TargetName="borderTabItem2"
                            Value="0,0,0,1"/>
                    <Setter Property="FontWeight"
                            TargetName="lblTabItem2"
                            Value="SemiBold"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListBooksItem" TargetType="ListBoxItem">
            <Border x:Name="borderListItem"
                    BorderBrush="#66768BA3"
                    BorderThickness="0,0.4,0,0">
                <StackPanel Orientation="Horizontal"
                            Margin="16,0,0,0">
                    <Label Name="txtBookNumber"
                                               Width="40"
                                               Height="45"
                                               Content="{Binding Info0}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                           Foreground="#11698E"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksName"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info1}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksWriter"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info2}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksGenre"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info3}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksPublisher"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info4}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected"
                         Value="true">
                    <Setter Property="Background"
                            TargetName="borderListItem"
                            Value="#D3E0EA"/>
                </Trigger>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter Property="Background"
                            TargetName="borderListItem"
                            Value="#FFEAF1F6"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListBoxBooks" TargetType="ListBox">
            <Border BorderThickness="0,1,0,0"
                    BorderBrush="#7F4F5688"
                    Background="Transparent"
                    Margin="6,-2.5,6,0">
                <StackPanel Orientation="Vertical"
                            Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal"
                                Margin="16,12,0,5">
                        <Label Content="#"
                               Width="40"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"
                               VerticalContentAlignment="Center"/>
                        <Label Content="Name"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="Writer"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="Genre"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="Publisher"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <ListBoxItem />
                    </StackPanel>
                    <ListBox Margin="0,0,0,0"
                             Height="273"
                             BorderThickness="0"
                             Background="Transparent"
                             ItemsSource="{TemplateBinding ItemsSource}"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template" Value="{StaticResource tmpListBooksItem}"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListMembersItem" TargetType="ListBoxItem">
            <Border x:Name="borderListItem"
                    BorderBrush="#66768BA3"
                    BorderThickness="0,0.4,0,0">
                <StackPanel Orientation="Horizontal"
                            Margin="16,0,0,0">
                    <Label Name="txtBookNumber"
                                               Width="40"
                                               Height="45"
                                               Content="{Binding Info0}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                           Foreground="#11698E"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksName"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info1}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksWriter"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info2}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksGenre"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info3}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Label Name="txtAllBooksPublisher"
                                               Width="100"
                                               Height="45"
                                               Content="{Binding Info4}" 
                                               FontSize="13"
                                               FontFamily="Fonts/#Titillium Web"
                                               Foreground="#495464"
                                               Margin="10,0,0,0"
                                               VerticalContentAlignment="Center"
                                               HorizontalContentAlignment="Left"/>
                    <Button Name="btnListMembersItemMore"
                            Height="45"
                            Width="50"
                            Content="More"
                            FontFamily="Fonts/#Titillium Web"
                            Foreground="#022E57"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            Click="btnListMembersItemMore_Click"/>
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected"
                         Value="true">
                    <Setter Property="Background"
                            TargetName="borderListItem"
                            Value="#D3E0EA"/>
                </Trigger>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter Property="Background"
                            TargetName="borderListItem"
                            Value="#FFEAF1F6"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListBoxMembers" TargetType="ListBox">
            <Border BorderThickness="0,1,0,0"
                    BorderBrush="#7F4F5688"
                    Background="Transparent"
                    Margin="6,-2.5,6,0">
                <StackPanel Orientation="Vertical"
                            Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal"
                                Margin="16,12,0,5">
                        <Label Content="#"
                               Width="40"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="User name"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="Password"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="Email"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <Label Content="Phone number"
                               Width="100"
                               FontSize="14"
                               FontFamily="Fonts/#Titillium Web"
                               Margin="10,0,0,0"
                               Foreground="#005A8D"/>
                        <ListBoxItem />
                    </StackPanel>
                    <ListBox Margin="0,0,0,0"
                             Height="273"
                             BorderThickness="0"
                             Background="Transparent"
                             ItemsSource="{TemplateBinding ItemsSource}"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template" Value="{StaticResource tmpListMembersItem}"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#4C116790"
                BorderThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="White" Offset="0.5"/>
                    <GradientStop Color="#FFF1F5FD" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" Color="#4CECECF0" Opacity="20" Direction="310" />
            </Border.Effect>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.4*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="2.5*"/>
                </Grid.RowDefinitions>
                <Grid.Clip>
                    <RectangleGeometry Rect="0,0,216,545"/>
                </Grid.Clip>
                <Label Grid.Row="0"
                       Content="Employees &#x0a;Panel"
                       Foreground="#053742"
                       FontSize="21"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="20,30,0,0"
                       FontWeight="Bold"
                       FontFamily="Fonts/#Arvo"/>
                <RadioButton x:Name="rbBooks"
                         Grid.Row="1"
                         Template="{StaticResource tmpTabItem}"
                         Content="Books"
                         FontSize="18"
                         IsChecked="True"
                             Checked="rbBooks_Checked"/>
                <RadioButton x:Name="rbMembers"
                         Grid.Row="2"
                         Template="{StaticResource tmpTabItem}"
                         Content="Members"
                         FontSize="18"
                             Checked="rbMembers_Checked"/>
                <RadioButton x:Name="rbWallet"
                         Grid.Row="3"
                         Template="{StaticResource tmpTabItem}"
                         Content="Wallet"
                         FontSize="18"
                             Checked="rbWallet_Checked"/>
                <RadioButton x:Name="rbInfo"
                         Grid.Row="4"
                         Template="{StaticResource tmpTabItem}"
                         Content="Info"
                         FontSize="18"
                             Checked="rbInfo_Checked"/>
                <Rectangle
                           Fill="#47597E"
                           Grid.Row="5" RenderTransformOrigin="0.5,0.5" Margin="61,116.2,-32.4,-36.2">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-20"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle
                           Fill="#293B5F"
                           Grid.Row="5" Margin="-47,138.2,100.6,-20.2" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="20"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Grid>
        </Border>

        <Border Background="Transparent" 
                BorderBrush="#4C005A8D" 
                BorderThickness="0"
                ClipToBounds="True"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                CornerRadius="90"
                Width="0"
                Grid.Column="1"
                Margin="0,90,0,30">
            <Border Background="Transparent" BorderBrush="#4C005A8D" 
                    BorderThickness="10,0,0,0" Margin="-11,0,0,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="9"/>
                </Border.Effect>
            </Border>
        </Border>

        <StackPanel Orientation="Vertical"
                    Grid.Column="2">
            <Border CornerRadius="12"
                    BorderBrush="#4C005A8D"
                    BorderThickness="0.2"
                    Padding="6,3,6,3"
                    Margin="0,30,44,30"
                    HorizontalAlignment="Right">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="White" Offset="0.5"/>
                        <GradientStop Color="#FFF1F5FD" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" 
                                      Color="#4CECECF0" 
                                      Opacity="20" 
                                      Direction="310" />
                </Border.Effect>
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <Label Name="lblEmployeeName"
                       Content="Marvin Robson"
                       FontSize="14"
                       FontFamily="Fonts/#Titillium Web"
                       VerticalContentAlignment="Center"/>
                    <Image Source="Images/profile_mini.png"
                       Width="40"
                       Height="40"/>
                </StackPanel>
            </Border>

            <TabControl Name="tabEmployees"
                        BorderThickness="0"
                        Margin="10,-15,10,10"
                        Background="Transparent">
                <TabItem x:Name="tabItemBooks"
                     Visibility="Collapsed">
                    <Border CornerRadius="4"
                            BorderBrush="#4C116790"
                            BorderThickness="0.2"
                            Padding="10"
                            Margin="40,20,30,30">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="#FFF1F5FD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Color="#4CECECF0" Opacity="20" Direction="310" />
                        </Border.Effect>
                        <TabControl x:Name="tabBooks"
                            Grid.Row="0"
                            BorderThickness="0"
                            Background="Transparent"
                                    Margin="0,-12,0,0">
                            <TabItem Name="tabItemAllBooks"
                             Header="All Books"
                                 Width="80"
                                 Height="48"
                             Template="{StaticResource tmpTabItem2}">
                                <ListBox Name="lsAllBooks"
                                     BorderThickness="0"
                                     Margin="-5.9,0,0,0"
                                     Template="{StaticResource tmpListBoxBooks}"
                                     HorizontalContentAlignment="Stretch"/>
                            </TabItem>
                            <TabItem Name="tabItemAvailableBooks"
                             Header="Available"
                                 Width="80"
                                 Height="48"
                             Template="{StaticResource tmpTabItem2}">
                                <ListBox Name="lsAvailableBooks"
                                     BorderThickness="0"
                                     Margin="-5.9,0,0,0"
                                     Template="{StaticResource tmpListBoxBooks}"
                                     HorizontalContentAlignment="Stretch"/>
                            </TabItem>
                            <TabItem Name="tabItemBorrowedBooks"
                             Header="Borrowed"
                                 Width="80"
                                 Height="48"
                             Template="{StaticResource tmpTabItem2}">
                                <ListBox Name="lsBorrowedBooks"
                                     BorderThickness="0"
                                     Margin="-5.9,0,0,0"
                                     Template="{StaticResource tmpListBoxBooks}"
                                     HorizontalContentAlignment="Stretch"/>
                            </TabItem>
                        </TabControl>
                    </Border>
                </TabItem>
                <TabItem x:Name="tabItemMembers"
                     Visibility="Collapsed">
                    <Border CornerRadius="4"
                            BorderBrush="#4C116790"
                            BorderThickness="0.2"
                            Padding="10"
                            Margin="40,20,30,30">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="#FFF1F5FD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Color="#4CECECF0" Opacity="20" Direction="310" />
                        </Border.Effect>
                        <TabControl x:Name="tabMembers"
                            Grid.Row="0"
                            BorderThickness="0"
                            Background="Transparent"
                            Margin="0,-12,0,0">
                            <TabItem Name="tabItemAllMembers"
                             Header="All Members"
                                 Width="110"
                                 Height="48"
                             Template="{StaticResource tmpTabItem2}">
                                <ListBox Name="lsAllMembers"
                                     BorderThickness="0"
                                     Margin="-5.9,0,0,0"
                                     Template="{StaticResource tmpListBoxMembers}"
                                     HorizontalContentAlignment="Stretch"/>
                            </TabItem>
                            <TabItem Name="tabItemDelayedReturns"
                             Header="Delayed Returns"
                                 Width="110"
                                 Height="48"
                             Template="{StaticResource tmpTabItem2}">
                                <ListBox Name="lsDelayedReturns"
                                     BorderThickness="0"
                                     Margin="-5.9,0,0,0"
                                     Template="{StaticResource tmpListBoxMembers}"
                                     HorizontalContentAlignment="Stretch"/>
                            </TabItem>
                            <TabItem Name="tabItemDelayedPays"
                             Header="Delayed Pays"
                                 Width="110"
                                 Height="48"
                             Template="{StaticResource tmpTabItem2}">
                                <ListBox Name="lsDelayedPays"
                                     BorderThickness="0"
                                     Margin="-5.9,0,0,0"
                                     Template="{StaticResource tmpListBoxMembers}"
                                     HorizontalContentAlignment="Stretch"/>
                            </TabItem>
                        </TabControl>
                    </Border>
                </TabItem>
                <TabItem x:Name="tabItemWallet"
                         Visibility="Collapsed">
                    <Border CornerRadius="4"
                            Height="200"
                            BorderBrush="#4C116790"
                            BorderThickness="0.2"
                            Margin="40,20,30,30">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="#FFF1F5FD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Color="#4CECECF0" Opacity="20" Direction="310" />
                        </Border.Effect>
                        <StackPanel Orientation="Vertical">
                            <Label Content="Your Wallet Balance :"
                               FontSize="24"
                               FontFamily="Fonts/#Titillium Web"
                               FontWeight="Bold"
                               Foreground="#11698E"
                               Margin="40,40,0,0"/>
                            <Label Name="lblEmployeeWalletBalance"
                               Content="1560$"
                               FontSize="20"
                               FontFamily="Fonts/#Titillium Web"
                               Foreground="#11698E"
                               Margin="40,0,0,0"/>
                            <Image Width="200"
                                   Height="200"
                                   Source="Images/wallet.png"
                                   Margin="400,-120,0,0" RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-20"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem x:Name="tabItemInfo"
                         Visibility="Collapsed">
                    <StackPanel Orientation="Vertical">
                        <Border CornerRadius="4"
                            BorderBrush="#4C116790"
                            BorderThickness="0.2"
                            Padding="10"
                            Margin="40,20,30,30">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                    <GradientStop Color="White" Offset="0.5"/>
                                    <GradientStop Color="#FFF1F5FD" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" Color="#4CECECF0" Opacity="20" Direction="310" />
                            </Border.Effect>
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.9*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Name="btnProfile"
                                            Grid.Column="0"
                                            Height="140"
                                            Width="140"
                                            Margin="0,20,0,0"
                                            Template="{StaticResource tmpRoundedImage}">
                                        <Button Content="Button" 
                                                Height="100"
                                                Width="75" />
                                    </Button>
                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.3*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="1"
                                        Orientation="Vertical">
                                            <TextBlock Text="User name :"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Background="Transparent"
                                            Foreground="#145374"
                                            FontSize="12"
                                            Margin="70,0,0,2"
                                            FontFamily="Fonts/#Titillium Web"/>
                                            <TextBox Name="edtUserName"
                                                    Width="200"
                                                    Height="40"
                                                     Margin="20,0,0,0"
                                                     Text="Marvin Robson"
                                         VerticalAlignment="Stretch"
                                         HorizontalAlignment="Stretch"
                                         VerticalContentAlignment="Center"
                                         Template="{DynamicResource tmpEditableRoundedTextBox}"
                                         FontFamily="Fonts/#Titillium Web"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="2"
                                        Orientation="Vertical">
                                            <TextBlock Text="Phone number :"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Background="Transparent"
                                            Foreground="#145374"
