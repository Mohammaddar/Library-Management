<Window
    x:Class="LibraryManagement.FrmMembers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LibraryManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="frm"
    Title="FrmMembers"
    Width="920"
    Height="570"
    Background="#F6F5F5"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ControlTemplate x:Key="tmpTabItem" TargetType="RadioButton">
            <Border x:Name="borderTabItem" Background="Transparent">
                <Label
                    Name="lblTabItem"
                    Margin="50,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Content="{TemplateBinding Content}"
                    FontFamily="Fonts/#Titillium Web"
                    FontSize="{TemplateBinding FontSize}"
                    FontWeight="Bold"
                    Foreground="#145374" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="borderTabItem" Property="Background" Value="#FFEAF1F6" />
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="borderTabItem" Property="Background" Value="#D3E0EA" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpTabItem2" TargetType="TabItem">
            <Grid
                x:Name="gridTabItem2"
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}">
                <Border
                    x:Name="borderTabItem2"
                    Background="Transparent"
                    BorderBrush="#022E57"
                    BorderThickness="0,0,0,0" />
                <Label
                    x:Name="lblTabItem2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="{TemplateBinding Header}"
                    FontFamily="Fonts/#Titillium Web"
                    FontSize="13"
                    Foreground="#022E57" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger SourceName="gridTabItem2" Property="IsMouseOver" Value="true">
                    <Setter TargetName="borderTabItem2" Property="Background" Value="#D3E0EA" />
                </Trigger>
                <Trigger Property="IsSelected" Value="true">
                    <Setter TargetName="borderTabItem2" Property="BorderThickness" Value="0,0,0,1" />
                    <Setter TargetName="lblTabItem2" Property="FontWeight" Value="SemiBold" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListBooksItem" TargetType="ListBoxItem">
            <Border
                x:Name="borderListItem"
                BorderBrush="#66768BA3"
                BorderThickness="0,0.4,0,0">
                <StackPanel Margin="16,0,0,0" Orientation="Horizontal">
                    <Label
                        Name="txtBookNumber"
                        Width="40"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info0}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#11698E" />
                    <Label
                        Name="txtAllBooksName"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info1}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Label
                        Name="txtAllBooksWriter"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info2}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Label
                        Name="txtAllBooksGenre"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info3}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Label
                        Name="txtAllBooksPublisher"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info4}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Button
                        Name="btnBorrow"
                        Width="50"
                        Height="45"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnBorrow_Click"
                        Content="Borrow"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="12"
                        Foreground="#022E57" />
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="true">
                    <Setter TargetName="borderListItem" Property="Background" Value="#D3E0EA" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="borderListItem" Property="Background" Value="#FFEAF1F6" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListMyBooksItem" TargetType="ListBoxItem">
            <Border
                x:Name="borderListItem"
                BorderBrush="#66768BA3"
                BorderThickness="0,0.4,0,0">
                <StackPanel Margin="16,0,0,0" Orientation="Horizontal">
                    <Label
                        Name="txtBookNumber"
                        Width="40"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info0}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#11698E" />
                    <Label
                        Name="txtBorrowedBooksName"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info1}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Label
                        Name="txtBorrowedBooksWriter"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info2}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Label
                        Name="txtBorrowedBooksBorrowDate"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info3}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Label
                        Name="txtBorrowedBooksReturnDate"
                        Width="100"
                        Height="45"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content="{Binding Info4}"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="13"
                        Foreground="#495464" />
                    <Button
                        Name="btnReturn"
                        Width="50"
                        Height="45"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnReturn_Click"
                        Content="Return"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="12"
                        Foreground="#022E57" />
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="true">
                    <Setter TargetName="borderListItem" Property="Background" Value="#D3E0EA" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="borderListItem" Property="Background" Value="#FFEAF1F6" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListBoxBooks" TargetType="ListBox">
            <Border
                Margin="6,-2.5,6,0"
                Background="Transparent"
                BorderBrush="#7F4F5688"
                BorderThickness="0,0,0,0">
                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                    <StackPanel Margin="16,6,0,5" Orientation="Horizontal">
                        <Label
                            Width="40"
                            Margin="10,0,0,0"
                            Content="#"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Name"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Writer"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Genre"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Publisher"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <ListBoxItem />
                    </StackPanel>
                    <ListBox
                        x:Name="lsAllBooks"
                        Height="318"
                        Margin="0,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{TemplateBinding ItemsSource}"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template" Value="{StaticResource tmpListBooksItem}" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpListBoxMyBooks" TargetType="ListBox">
            <Border
                Margin="6,-2.5,6,0"
                Background="Transparent"
                BorderBrush="#7F4F5688"
                BorderThickness="0,0,0,0">
                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                    <StackPanel Margin="16,6,0,5" Orientation="Horizontal">
                        <Label
                            Width="40"
                            Margin="10,0,0,0"
                            Content="#"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Name"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Writer"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Borrow Date"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <Label
                            Width="100"
                            Margin="10,0,0,0"
                            Content="Return Date"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14"
                            Foreground="#005A8D" />
                        <ListBoxItem />
                    </StackPanel>
                    <ListBox
                        x:Name="lsMyBooks"
                        Height="318"
                        Margin="0,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{TemplateBinding ItemsSource}"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template" Value="{StaticResource tmpListMyBooksItem}" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpRoundedTextBox" TargetType="TextBox">
            <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                <Border
                    x:Name="txtBoxBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="#FFE4E3E5"
                    BorderThickness="0.4"
                    CornerRadius="14" />
                <TextBox
                    x:Name="edt"
                    Margin="12,6,12,6"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    MaxLength="{TemplateBinding MaxLength}"
                    TextChanged="edt_TextChanged" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="txtBoxBorder" Property="Background" Value="#FFEAF1F6" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpEditableRoundedTextBox" TargetType="TextBox">
            <Border
                x:Name="txtBoxBorder"
                Background="#FFF5FD"
                BorderBrush="#4CCBCDEE"
                BorderThickness="0.3"
                CornerRadius="14">
                <Grid
                    x:Name="pnlEditableRoundedTextBox"
                    Width="{TemplateBinding Width}"
                    Height="{TemplateBinding Height}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4.5*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="edtEditableRoundedTextBox"
                        Grid.Column="0"
                        Margin="12,6,0,6"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        IsEnabled="False"
                        Text="{TemplateBinding Text}"
                        TextChanged="edtEditableRoundedTextBox_TextChanged" />
                    <Button
                        x:Name="imgEdit"
                        Grid.Column="1"
                        Width="30"
                        Height="30"
                        Margin="0,0,6,0"
                        BorderThickness="0"
                        Template="{StaticResource tmpEditButton}" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="true" />
                        <Condition SourceName="edtEditableRoundedTextBox" Property="IsEnabled" Value="true" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="txtBoxBorder" Property="Background" Value="#FFF3EFF7" />
                </MultiTrigger>
                <EventTrigger RoutedEvent="Button.Click" SourceName="imgEdit">
                    <BeginStoryboard>
                        <Storyboard>
                            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="edtEditableRoundedTextBox" Storyboard.TargetProperty="(TextBox.IsEnabled)">
                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True" />
                            </BooleanAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpRoundedImage" TargetType="Button">
            <Border
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="90">
                <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                    <Image
                        x:Name="imgProfile"
                        Width="136"
                        Height="136"
                        Source="Images/profile.png"
                        Stretch="Fill">
                        <Image.Clip>
                            <RectangleGeometry
                                RadiusX="90"
                                RadiusY="90"
                                Rect="0,0,136,136" />
                        </Image.Clip>
                    </Image>
                    <Button
                        x:Name="btnSetPic"
                        Canvas.Left="23"
                        Canvas.Top="53"
                        Width="90"
                        Height="35"
                        Background="#FFFFF5FD"
                        Click="btnSetPic_Click"
                        Content="Change"
                        FontFamily="Fonts/#Titillium Web"
                        FontSize="10"
                        Foreground="Black"
                        Opacity="0.8"
                        Template="{DynamicResource tmpRoundedButton}"
                        Visibility="Hidden" />
                </Canvas>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="btnSetPic" Property="Visibility" Value="Visible" />
                    <Setter TargetName="imgProfile" Property="Effect">
                        <Setter.Value>
                            <BlurEffect />
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="tmpSearchableRoundedTextBox" TargetType="TextBox">
            <Border
                x:Name="txtBoxBorder"
                Background="#FFF5FD"
                BorderBrush="#4CCBCDEE"
                BorderThickness="0.3"
                CornerRadius="14">
                <Grid
                    x:Name="pnlSearchableRoundedTextBox"
                    Width="{TemplateBinding Width}"
                    Height="{TemplateBinding Height}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="edtSearchableRoundedTextBox"
                        Grid.Column="0"
                        Margin="12,6,0,6"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Text="{TemplateBinding Text}" />
                    <Button
                        x:Name="imgSearch"
                        Grid.Column="1"
                        Width="30"
                        Height="30"
                        Margin="0,0,6,0"
                        BorderThickness="0"
                        Click="imgSearch_Click"
                        Template="{StaticResource tmpSearchButton}" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="txtBoxBorder" Property="Background" Value="#FFF3EFF7" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#4C116790" BorderThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Offset="0.5" Color="White" />
                    <GradientStop Offset="1" Color="#FFF1F5FD" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="12"
                    Direction="310"
                    Opacity="20"
                    Color="#4CECECF0" />
            </Border.Effect>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.4*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid.Clip>
                    <RectangleGeometry Rect="0,0,216,545" />
                </Grid.Clip>
                <Label
                    Grid.Row="0"
                    Margin="20,30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Members &#x0a;Panel"
                    FontFamily="Fonts/#Arvo"
                    FontSize="21"
                    FontWeight="Bold"
                    Foreground="#053742" />
                <RadioButton
                    x:Name="rbBooks"
                    Grid.Row="1"
                    Checked="rbAllBooks_Checked"
                    Content="Books"
                    FontSize="18"
                    IsChecked="True"
                    Template="{StaticResource tmpTabItem}" />
                <RadioButton
                    x:Name="rbMyBooks"
                    Grid.Row="2"
                    Checked="rbMyBooks_Checked"
                    Content="My Books"
                    FontSize="18"
                    Template="{StaticResource tmpTabItem}" />
                <RadioButton
                    x:Name="rbMembership"
                    Grid.Row="3"
                    Checked="rbMembership_Checked"
                    Content="Membership"
                    FontSize="18"
                    Template="{StaticResource tmpTabItem}" />
                <RadioButton
                    x:Name="rbWallet"
                    Grid.Row="4"
                    Checked="rbWallet_Checked"
                    Content="Wallet"
                    FontSize="18"
                    Template="{StaticResource tmpTabItem}" />
                <RadioButton
                    x:Name="rbInfo"
                    Grid.Row="5"
                    Checked="rbInfo_Checked"
                    Content="Info"
                    FontSize="18"
                    Template="{StaticResource tmpTabItem}" />
                <Rectangle
                    Grid.Row="6"
                    Margin="61,116.2,-32.4,-36.2"
                    Fill="#47597E"
                    RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-20" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle
                    Grid.Row="6"
                    Margin="-47,138.2,100.6,-20.2"
                    Fill="#293B5F"
                    RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="20" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Grid>
        </Border>

        <Border
            Grid.Column="1"
            Width="0"
            Margin="0,90,0,30"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Transparent"
            BorderBrush="#4C005A8D"
            BorderThickness="0"
            ClipToBounds="True"
            CornerRadius="90">
            <Border
                Margin="-11,0,0,0"
                Background="Transparent"
                BorderBrush="#4C005A8D"
                BorderThickness="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="9" ShadowDepth="0" />
                </Border.Effect>
            </Border>
        </Border>

        <StackPanel Grid.Column="2" Orientation="Vertical">
            <DockPanel LastChildFill="False">
                <Border
                    x:Name="boxSearch"
                    Width="330"
                    Height="50"
                    Margin="50,30,44,30"
                    Padding="6,3,6,3"
                    BorderBrush="#4C005A8D"
                    BorderThickness="0.2"
                    CornerRadius="12"
                    DockPanel.Dock="Left">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.9" Color="White" />
                            <GradientStop Offset="1" Color="#FFF1F5FD" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="6"
                            Direction="310"
                            Opacity="20"
                            Color="#4CECECF0" />
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBox
                            Name="edtSearch"
                            Width="180"
                            Height="40"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            FontFamily="Fonts/#Titillium Web"
                            Template="{DynamicResource tmpSearchableRoundedTextBox}" />
                        <CheckBox
                            x:Name="cbBookName"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Name"
                            Foreground="#145374" />
                        <CheckBox
                            x:Name="cbBookWriter"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Writer"
                            Foreground="#145374" />
                    </StackPanel>
                </Border>
                <Border
                    Height="50"
                    MaxWidth="220"
                    Margin="0,30,44,30"
                    Padding="6,3,6,3"
                    BorderBrush="#4C005A8D"
                    BorderThickness="0.2"
                    CornerRadius="12"
                    DockPanel.Dock="Right">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Offset="0.5" Color="White" />
                            <GradientStop Offset="1" Color="#FFF1F5FD" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="6"
                            Direction="310"
                            Opacity="20"
                            Color="#4CECECF0" />
                    </Border.Effect>
                    <StackPanel
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Label
                            Name="lblMemberName"
                            VerticalContentAlignment="Center"
                            Content="Marvin Robson"
                            FontFamily="Fonts/#Titillium Web"
                            FontSize="14" />
                        <Image
                            Width="40"
                            Height="40"
                            Source="Images/profile_mini.png" />
                    </StackPanel>
                </Border>
            </DockPanel>

            <TabControl
                Name="tabMembers"
                Margin="10,-15,10,10"
                Background="Transparent"
                BorderThickness="0">
                <TabItem x:Name="tabItemBooks" Visibility="Collapsed">
                    <Border
                        Margin="40,20,30,30"
                        Padding="10"
                        BorderBrush="#4C116790"
                        BorderThickness="0.2"
                        CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Offset="0.5" Color="White" />
                                <GradientStop Offset="1" Color="#FFF1F5FD" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="12"
                                Direction="310"
                                Opacity="20"
                                Color="#4CECECF0" />
                        </Border.Effect>
                        <ListBox
                            Name="lsAllBooks"
